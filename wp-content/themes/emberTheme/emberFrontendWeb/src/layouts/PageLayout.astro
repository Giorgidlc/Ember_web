---
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";
import Footer from "@/components/sections/Footer.astro";



const { 
  pageTitle = "", 
  heroTitle = "", 
  heroDescription = "", 
  slug,
} = Astro.props;

---

<BaseLayout pageTitle={pageTitle} >
  <Hero 
    titleHero={heroTitle} 
    descriptionHero={heroDescription}
    isContact={ slug === 'contacto'} 
  />
  
  <slot />  
  <slot name="que-hacemos" />
  <slot name="quienes-somos" />
  <slot name="oportunidades-europeas"/>

  <Footer />

</BaseLayout>
