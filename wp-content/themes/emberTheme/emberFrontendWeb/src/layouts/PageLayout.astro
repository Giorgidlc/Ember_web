---
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";

export interface Props {
  lang: 'es' | 'en';
  pageTitle: string;
  heroTitle?: string;
  heroDescription?: string;
  dotHero?: string;
  slug?: string;
}


const { 
  lang,
  pageTitle = "", 
  heroTitle = "", 
  heroDescription = "", 
  dotHero = "",
  slug,
} = Astro.props;
---

<BaseLayout pageTitle={ pageTitle } slug={ slug } lang={ lang } >
  <Hero 
    titleHero={heroTitle} 
    descriptionHero={heroDescription}
    dotHero={dotHero}
    isContact={ slug === 'contacto' } 
    isEU={ slug === 'oportunidades-europeas' }
  /> 
  <slot name="que-hacemos" />
  <slot name="quienes-somos" />
  <slot name="oportunidades-europeas"/>
  <slot name="aviso-legal"/>
  <slot name="politica-privacidad"/>
  <slot name="politica-cookies"/>
</BaseLayout>
