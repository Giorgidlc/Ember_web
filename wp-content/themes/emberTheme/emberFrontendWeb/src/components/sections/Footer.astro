---
import logoEmber from "@assets/logoEmber.svg";
const { titleFooter, contactFooter } = Astro.props;
---

<footer>
  <svg class="bg" fill="none" viewBox="0 0 1440 838" preserveAspectRatio="none">
    <path fill="currentColor" d="M0 58.427 1440 0v1000H0V58.427Z"></path>
  </svg>
  <section class="inner">
    <div class="column">
      <h2>Contacta con nosotros</h2>
      <div>
        <p>+34 601 253 603</p>
        <p>hablamos@ember.com</p>
      </div>
    </div>
    <div class="column">
      <img
        src={logoEmber.src}
        alt="Logo Ember"
        loading="lazy"
        width="200"
        height="150"
      />
    </div>
  </section>
</footer>

<style>
  footer {
    position: relative;
    display: flex;
    align-items: center;
    color: var(--color-base);
    block-size: 40dvh;
    overflow: hidden;

    section {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;

      >:nth-child(1) {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }
      >:nth-child(2) {
        display: flex;
        justify-content: end;
        flex: 1 2 auto;
  
      }

      h2 {
        font-size: var(--fontSize-x-large);
        text-wrap: balance;
        max-inline-size: 13ch;
      }

      p {
        margin-block-end: 1rem;
      }

      img {
        color: var(--color-base);
      }
    }
  }

  .bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    color: var(--color-accent);
  }
</style>
