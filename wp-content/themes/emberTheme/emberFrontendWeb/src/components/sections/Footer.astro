---
import logoEmber from "@assets/logoEmber.svg";
const { titleFooter, contactFooter } = Astro.props;
---

<footer>
  <svg class="bg" fill="none" viewBox="0 0 1440 838" preserveAspectRatio="none">
    <path fill="currentColor" d="M0 58.427 1440 0v1000H0V58.427Z"></path>
  </svg>
  <section class="inner">
    <div class="column">
      <h2>{titleFooter}</h2>
      <div>
        <p>{contactFooter[0]}</p>
        <p>{contactFooter[1]}</p>
      </div>
    </div>
    <div class="column">
       <img src={logoEmber.src} alt='Logo Ember' loading="lazy" width="200" height="150" />
    </div>
  </section>
</footer>

<style>
  footer {
    position: relative;
    display: flex;
    align-items: center;
    color: var(--color-base);
    block-size: 60dvh;
    overflow: hidden;

    h2 {
      font-size: var(--fontSize-x-large);
      text-wrap: balance;
      max-inline-size: 16ch;
    }

    img {
      color: var(--color-base);
    }
  }

  .bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    color: var(--color-accent);
  }
</style>
