---
import logoEmber from "@assets/logoEmber.svg";
---

<footer>
  <svg class="bg" fill="none" viewBox="0 0 1440 838" preserveAspectRatio="none">
    <path fill="currentColor" d="M0 58.427 1440 0v1000H0V58.427Z"></path>
  </svg>
  <section class="inner">
    <div class="column">
      <h2>Contacta con nosotros</h2>
      <div>
        <p>+34 601 253 603</p>
        <p>hablamos@ember.com</p>
      </div>
    </div>
    <div class="column">
      <img
        src={logoEmber.src}
        alt="Logo Ember"
        loading="lazy"
        width="200"
        height="150"
      />
    </div>
  </section>
  <figure>
    <img 
      width="1000"
      height="100"
      src="http://localhost:8890/wp-content/uploads/2025/09/CONBANDERA_KITDIGITAL-fondo-transparente.webp" 
      alt="Banner Kit digital" 
    />
  </figure>
</footer>

<style>
  footer {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--color-base);
    padding-inline: var(--space-inline);
    padding-block: var(--space-block);
    overflow: hidden;

    section {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      margin-block-end: var(--space-block);

      >:nth-child(1) {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }
      >:nth-child(2) {
        display: flex;
        justify-content: end;
        flex: 1 2 auto;
  
      }

      h2 {
        font-size: var(--fontSize-x-large);
        text-wrap: balance;
        max-inline-size: 13ch;
      }

      p {
        margin-block-end: 1rem;
      }

      img {
        color: var(--color-base);
      }
    }

    figure {
      position: absolute;
      bottom: 0;
      display: flex;
      inline-size: 100dvw;
      background-color: var(--color-base);
      padding-inline: 1rem;
      padding-block: 1.5rem;

      img {
        flex: 1;
        max-inline-size: 100%;
        object-fit: contain;
      }
    }
  }

  .bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    color: var(--color-accent);
  }
</style>
