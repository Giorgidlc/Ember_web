---
const { legalContent } = Astro.props;
---

<section class="inner">
  <span set:html={legalContent} />
</section>

<style>
  span {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    > h2,
    h3,
    p,
    li,
    a {
      color: var(--color-contrast-2);
    }

    > h2 {
      margin-block-start: 2rem;
    }

    > ul {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding-block: 1rem;

      > li {
        margin-inline-start: 2rem;
      }
    }
  }
</style>
